		.wwd_block

			//- 	name, type, number, checked, (class)
			+sliderInputs('wwd', 'radio', 3, 1)

			//- left half
			.wwd_half._left
				.wwd_img-wrap
					each val in ['Photography', 'Creativity', 'Web design']
						img.wwd_img(src= `images/wwd_${nameSrc(val)}.jpg` alt= val)

			//- right half
			.wwd_half._right

				mixin wwdService(title, titleValue, i, ...text)
					h5.item-title.wwd_item-title(class= `wwd_${title}-title`)
